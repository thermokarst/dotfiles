source ~/.mutt/base16.muttrc

set imap_user        = "matthewrdillon@gmail.com"
set imap_keepalive   = 30
set folder           = "imaps://imap.gmail.com"
set spoolfile        = "+INBOX"
set postponed        = "+[Gmail]/Drafts"
set header_cache     = ~/.mutt/matthewrdillon/headers
set message_cachedir = ~/.mutt/matthewrdillon/bodies
set certificate_file = ~/.mutt/certificates
set smtp_url         = "smtp://matthewrdillon@gmail.com@smtp.gmail.com:587/"
set move             = no
set date_format      = "%m/%d"
set index_format     = "[%Z]  %D  %-20.20F  %s"
set sort             = threads
set sort_aux         = reverse-last-date-received

set uncollapse_jump
set sort_re

unset imap_passive

bind index <space> collapse-thread
bind index g noop
bind index G imap-fetch-mail

macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to trash"
macro index d "<save-message>=[Gmail]/Trash<enter>" "Trash"
macro pager d "<save-message>=[Gmail]/Trash<enter>" "Trash"
macro index y "<save-message>=[Gmail]/All%20Mail<enter>" "Archive"
macro pager y "<save-message>=[Gmail]/All%20Mail<enter>" "Archive"
macro index t "<pipe-message>mutt2task<enter>" "Add to taskwarrior"

alternative_order text/plain text/html
auto_view text/html
