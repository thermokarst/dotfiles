#!/bin/sh

set -e

{{ if eq .hosttype "devterm" -}}
sudo apt install \
  brightnessctl \
  git \
  libncurses-dev \
  libssl-dev \
  lynx \
  ripgrep \
  tmux \
  tree \
  wget \
  zsh \
  -y

{{ else if eq .hosttype "personal" -}}
sudo port install \
  cmus \
  curl \
  direnv \
  fzf \
  git \
  git-delta \
  helix \
  jujutsu \
  kitty \
  ripgrep \
  tmux \
  tree \
  watch \
  wget \
  xz \
  zellij \
  zk \
  zsh

{{ else if eq .hosttype "wsl" -}}
sudo apt update
sudo apt install \
  build-essential \
  clang \
  libssl-dev \
  pkg-config \
  ripgrep \
  tmux \
  tree \
  wget \
  -y
{{ end }}

{{ if eq .hosttype "work" -}}
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/opt/homebrew/bin/brew shellenv)"
brew install \
  cmus \
  curl \
  direnv \
  fzf \
  git \
  git-delta \
  helix \
  jj \
  kitty \
  ripgrep \
  tmux \
  tree \
  watch \
  wget \
  xz \
  zellij \
  zk \
  zsh
{{ end }}
