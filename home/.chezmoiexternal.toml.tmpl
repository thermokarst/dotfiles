[".zprezto"]
    type = "git-repo"
    url = "https://github.com/sorin-ionescu/prezto.git"
    refreshPeriod = "168h"
    [".zprezto".pull]
        args = ["--recurse-submodules"]
    [".zprezto".clone]
        args = ["--recurse-submodules"]

{{- if eq .chezmoi.hostname "devterm" }}
["ttyscheme"]
    type = "git-repo"
    url = "https://github.com/kolunmi/ttyscheme.git"
    refreshPeriod = "168h"
{{- else }}
[".config/base16-shell"]
    type = "git-repo"
    url = "https://github.com/chriskempson/base16-shell.git"
    refreshPeriod = "168h"
{{- end }}
