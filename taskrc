### reports

# customize `next`
report.next.filter=status:pending limit:15 -reading project.not:music
report.next.columns=id,depends,priority,project,scheduled.relative,due.relative,description.count,urgency
report.next.labels=ID,depends,priority,project,scheduled,due,description,urgency

# customize `work`
report.work.description=cap lab and qiime2
report.work.filter=status:pending limit:20 (project:q2 or project:clab)
report.work.sort=urgency-
report.work.columns=id,depends,priority,project,scheduled.relative,due.relative,description.count,urgency
report.work.labels=ID,depends,priority,project,scheduled,due,description,urgency

# `main`
report.main.description=everything, sans long-term projects
report.main.filter=status:pending -reading project.not:music
report.main.sort=recur+,urgency-
report.main.columns=id,depends,priority,project,due.relative,description.count,urgency
report.main.labels=ID,depends,priority,project,due.relative,description,urgency

# `inbox`
report.inbox.description=inbox
report.inbox.filter=status:pending project:
report.inbox.sort=recur+,urgency-
report.inbox.columns=id,depends,priority,project,due.relative,description.count,urgency
report.inbox.labels=ID,depends,priority,project,due.relative,description,urgency

# tasksh
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING ) and -reading and project.not:music

### contexts

# work
context.work=project:q2 or project:clab
context=work
